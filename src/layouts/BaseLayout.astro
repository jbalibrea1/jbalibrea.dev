---
import { ViewTransitions } from 'astro:transitions';
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
  sticky?: boolean;
}
const descriptionDefault =
  'Desarrollador Full Stack especializado en tecnologías como React, Node.js, Express, JavaScript. Jorge Balibrea - Murcia, España.';

const { title, description = descriptionDefault, sticky } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-3R2C9ZBRFV"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-3R2C9ZBRFV');
    </script>

    <meta charset="utf-8" />
    <meta id="theme-color" name="theme-color" content="#fafafa" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="author" content="Jorge Balibrea" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:title" content="jbalibrea.dev" />
    <meta name="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jbalibrea.dev" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="jbalibrea.dev" />
    <meta
      property="og:image"
      content="https://jbalibrea.dev/jorge-balibrea-foto-perfil.png"
    />
    <meta property="og:image:width" content="240" />
    <meta property="og:image:height" content="240" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@jbalibrea1" />
    <meta name="twitter:creator" content="@jbalibrea1" />
    <meta name="twitter:title" content="Jorge Balibrea - jbalibrea.dev" />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://jbalibrea.dev/jorge-balibrea-foto-perfil.png"
    />
    <meta name="twitter:image:alt" content="Avatar de Jorge Balibrea" />
    <meta name="twitter:url" content="https://jbalibrea.dev" />

    <meta
      name="keywords"
      content="jbalibrea, jorge balibrea, web developer, software developer, full stack developer"
    />

    <!--  Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Source+Serif+4:ital,opsz,wght@0,8..60,200..900;1,8..60,200..900&display=swap"
      rel="stylesheet"
    />

    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed de jbalibrea - jbalibrea.dev"
      href={`${Astro.site}rss.xml`}
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/android-chrome-192x192.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="512x512"
      href="/android-chrome-512x512.png"
    />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>
      {title} by jbalibrea | Desarrollador Full Stack
    </title>
    <slot name="head" />
    <ViewTransitions />
  </head>

  <body>
    <Header sticky={sticky} />
    <slot />
    <button
      aria-label="Back to Top"
      class="z-90 fixed bottom-8 end-4 flex h-10 w-10 translate-y-28 items-center justify-center rounded-full border-2 border-transparent bg-zinc-400 text-3xl opacity-0 transition-all duration-300 hover:border-accent-2 data-[show=true]:translate-y-0 data-[show=true]:opacity-100 dark:bg-zinc-700 sm:end-8 sm:h-12 sm:w-12"
      data-show="false"
      id="to-top-btn"
      ><svg
        aria-hidden="true"
        class="h-6 w-6 text-accent-2"
        fill="none"
        focusable="false"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M4.5 15.75l7.5-7.5 7.5 7.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </button>
    <Footer />
    <script is:inline data-astro-rerun>
      (function () {
        /** Scrolls the document to the top when
         * the "Back to Top" button is clicked. */
        function backToTop() {
          document
            .querySelector('#to-top-btn')
            ?.addEventListener('click', () => {
              document.body.scrollTop = 0; // For Safari
              document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
            });
        }
        backToTop();

        /** Show or hide the "Back to Top" button
         * based on the scroll position. */
        let lastScrollTop = 0;

        function showBackToTop() {
          const toTopBtn = document.querySelector('#to-top-btn');
          if (toTopBtn) {
            const currentScrollTop =
              document.body.scrollTop || document.documentElement.scrollTop;

            if (currentScrollTop < lastScrollTop && currentScrollTop > 20) {
              toTopBtn.dataset.show = 'true';
            } else if (currentScrollTop < 20) {
              toTopBtn.dataset.show = 'false';
            } else {
              toTopBtn.dataset.show = 'false';
            }

            lastScrollTop = currentScrollTop;
          }
        }

        document.addEventListener('scroll', showBackToTop);
      })();
    </script>
  </body>
</html>
