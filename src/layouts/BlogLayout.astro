---
import PostCard from '@/components/PostCard.astro';
import BaseLayout from '@layouts/BaseLayout.astro';

interface Props {
  data: any[];
  title?: string;
  description?: string;
  canonicalURL?: string;
}

const {
  data,
  title = 'Blog',
  description = 'Recursos sobre desarrollo Full Stack, React, Linux y herramientas para desarrolladores. Buenas prácticas, productividad y curiosidades del mundo del software.',
  canonicalURL,
} = Astro.props;
---

<BaseLayout title={title} description={description} canonicalURL={canonicalURL}>
  <main>
    <div class="pb-4">
      <h1 class="title">
        Blog de <span class="title-bold"> jbalibrea</span>
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6 scale-110 fill-accent"
          ><path
            d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
          ></path><path
            d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
          ></path><circle cx="6" cy="18" r="2"></circle>
        </svg>
        <span class="sr-only">RSS Feed</span>
      </a>
      <p class="mt-4">
        Bienvenido a mi blog. Aquí encontrarás artículos sobre desarrollo de
        software.
      </p>
    </div>
    <ul>
      {
        data.map(({ data, slug }) => (
          <li class="mb-10">
            <article>
              <PostCard href={`/blog/${slug}`} post={data} />
            </article>
          </li>
        ))
      }
    </ul>
    <slot />
  </main>
</BaseLayout>
