---
import AboutMe from '@/components/AboutMe.astro';
import Button from '@/components/Button.astro';
import LastProject from '@/components/LastProject.astro';
import TimeLine from '@/components/TimeLine.astro';
import HomeLayout from '@/layouts/HomeLayout.astro';
---

<HomeLayout title="Jorge Balibrea - jbalibrea.dev">
  <main transition:name={'pages'}>
    <AboutMe />
    <div class="flex justify-end items-center">
      <Button href="/repositories" text="Explorar mis repositorios">
        <svg
          class="w-3 h-3 ms-2 group-hover:scale-x-125"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </Button>
    </div>
    <LastProject />
    <TimeLine />
  </main>
</HomeLayout>
