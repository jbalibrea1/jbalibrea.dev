---
import AboutMe from "../components/AboutMe.astro";
import LastProject from "../components/LastProject.astro";
import TimeLine from "../components/TimeLine.astro";
import HomeLayout from "../layouts/HomeLayout.astro";
---

<HomeLayout title="Jorge Balibrea - jbalibrea.dev">
  <main class="flex flex-col gap-8 pt-5 px-8 pb-16" transition:name={"test"}>
    <AboutMe />
    <div class="flex justify-end items-center">
      <a
        href="/projects"
        class="flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700 group"
        >View some of my repos
        <svg
          class="w-3 h-3 ms-2 rtl:rotate-180 transition ease-in-out group-hover:scale-x-125"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </a>
    </div>
    <LastProject />
    <TimeLine />
  </main>
</HomeLayout>
