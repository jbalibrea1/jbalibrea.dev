---
import PostCard from '@/components/PostCard.astro';
import { SITE } from '@config';
import BaseLayout from '@layouts/BaseLayout.astro';
import getShortedPosts from '@utils/getSorterPosts';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const sortedPosts = getShortedPosts(posts);
const page1Posts = sortedPosts.slice(0, SITE.postsPerPage);

const title = 'Blog';
const description =
  'Artículos sobre Desarrollo de Software Full Stack y Tecnología. Recursos, tutoriales y reflexiones sobre el apasionante mundo del software y su práctica.';
---

<BaseLayout title={title} description={description}>
  <main>
    <div class="pb-4">
      <h1 class="text-4xl text-current uppercase inline-block">
        Blog de <span class="font-extrabold tracking-tight dark:text-white">
          jbalibrea</span
        >
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6 scale-110 fill-accent"
          ><path
            d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
          ></path><path
            d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
          ></path><circle cx="6" cy="18" r="2"></circle>
        </svg>
        <span class="sr-only">RSS Feed</span>
      </a>
      <h2 class="mt-4">
        Bienvenido a mi blog. Aquí encontrarás artículos sobre desarrollo de
        software.
      </h2>
    </div>
    <ul>
      {
        page1Posts.map(({ data, slug }) => (
          <li class="mb-10">
            <article>
              <PostCard href={`/blog/${slug}`} post={data} />
            </article>
          </li>
        ))
      }
    </ul>
    <div class="mt-8 space-y-4">
      {
        sortedPosts.length > SITE.postsPerPage && (
          <div>
            <a
              href="/blog/page/2"
              class="text-accent hover:text-accent-2 transition-colors"
            >
              Ver más posts →
            </a>
          </div>
        )
      }
      <div>
        <a
          href="/blog/archive"
          class="text-accent hover:text-accent-2 transition-colors"
        >
          Ver todos los posts archivados →
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
