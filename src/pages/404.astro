---
import Tranquility from '@/assets/Tranquility.png';
import Button from '@/components/Button.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
---

<BaseLayout
  title="404 - Página No Encontrada"
  description="404 - Página no encontrada. Lo sentimos, la página que buscas no existe. Regresa a la página de inicio."
>
  <main class="justify-center">
    <div class="lg:flex lg:items-center lg:gap-12">
      <div class="w-full lg:w-1/2">
        <p class="text-lg font-medium text-pink-700 dark:text-pink-400">
          404 error
        </p>
        <h1
          class="mt-3 text-2xl font-semibold text-gray-700 dark:text-white md:text-3xl"
        >
          Página no encontrada
        </h1>
        <p class="mt-4 text-gray-500 dark:text-gray-400">
          La página que buscas no existe.
        </p>
        <p class="mt-4 text-gray-500 dark:text-gray-400">
          Si crees que esto es un error puedes contactar conmigo. <a
            href="https://github.com/jbalibrea1"
            target="_blank"
            class="text-accent">Github</a
          >
        </p>
        <div class="flex items-center mt-6 gap-x-3">
          <Button href="/" text="Volver al inicio" />
        </div>
      </div>

      <div class="relative w-full mt-8 lg:w-1/2 lg:mt-0">
        <Image
          class="w-full h-80 md:h-96 lg:h-[75vh] rounded-lg object-cover"
          src={Tranquility}
          alt="Art - Tranquility"
          loading="eager"
        />
      </div>
    </div>
  </main>
</BaseLayout>
