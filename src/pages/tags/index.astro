---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
const allPosts = await getCollection('posts');
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const pageTitle = 'Tags - Blog jbalibrea.dev';
---

<BaseLayout title={pageTitle}>
  <main transition:name={'pages'}>
    <h1 class="text-2xl text-current font-bold tracking-tight">
      √çndice de Tags
    </h1>
    <div class="flex flex-wrap gap-2 mt-5">
      {
        tags.map((tag) => (
          <p class="text-xs bg-gray-200 dark:bg-neutral-800 text-gray-700 dark:text-slate-300 px-2 py-1 rounded-full mr-2 hover:bg-gray-300 dark:hover:bg-neutral-700 transition duration-75 ease-in-out">
            <a href={`/tags/${tag}`}>{tag}</a>
          </p>
        ))
      }
    </div>
  </main>
</BaseLayout>
