---
import Button from './Button.astro';

interface Props {
  href: string;
  text: string;
  target?: string;
}

const { href, text, target } = Astro.props as Props;
---

<Button href={href} text={text} target={target}>
  <svg
    class="w-3 h-3 ms-2 group-hover:scale-x-125"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 14 10"
  >
    <path
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M1 5h12m0 0L9 1m4 4L9 9"></path>
  </svg>
</Button>
