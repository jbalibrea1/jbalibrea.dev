---
import type { PageDataProps } from '@/interfaces/PageProps';
import PostItem from './PostItem.astro';

const { pagePosts } = Astro.props;
---

<main>
  <div class="pb-4">
    <h1 class="text-4xl text-current uppercase inline-block mb-4">
      Blog's archivados
      <span class="font-extrabold tracking-tight dark:text-white">
        jbalibrea
        <a
          target="_blank"
          href="/rss.xml"
          class="inline-block"
          aria-label="rss feed"
          title="RSS Feed"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 scale-110 fill-accent inline"
          >
            <path
              d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
            ></path>
            <path
              d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
            ></path>
            <circle cx="6" cy="18" r="2"></circle>
          </svg>
          <span class="sr-only">RSS Feed</span>
        </a>
      </span>
    </h1>
  </div>
  <ul>
    {
      pagePosts.map((data: PageDataProps) => (
        <li class="mb-2">
          <article>
            <PostItem post={data} />
          </article>
        </li>
      ))
    }
  </ul>
  <slot />
</main>
