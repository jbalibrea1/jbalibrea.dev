<button
  aria-label="Back to Top"
  class="z-90 fixed bottom-8 end-4 flex h-10 w-10 translate-y-28 items-center justify-center rounded-full border-2 border-transparent bg-bg-color-2 text-3xl opacity-0 transition-all duration-300 hover:border-accent-2 data-[show=true]:translate-y-0 data-[show=true]:opacity-100 sm:end-8 sm:h-12 sm:w-12"
  data-show="false"
  id="to-top-btn"
  ><svg
    aria-hidden="true"
    class="h-6 w-6 text-accent-2"
    fill="none"
    focusable="false"
    stroke="currentColor"
    stroke-width="2"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M4.5 15.75l7.5-7.5 7.5 7.5"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
</button>

<script is:inline data-astro-rerun>
  (function () {
    /** Scrolls the document to the top when
     * the "Back to Top" button is clicked. */
    function backToTop() {
      document.querySelector('#to-top-btn')?.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
        document.body.scrollTop = 0; // For Safari
        document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
      });
    }
    backToTop();

    /** Show or hide the "Back to Top" button
     * based on the scroll position. */
    let lastScrollTop = 0;

    function showBackToTop() {
      const toTopBtn = document.querySelector('#to-top-btn');
      if (toTopBtn) {
        const currentScrollTop =
          document.body.scrollTop || document.documentElement.scrollTop;

        if (currentScrollTop < lastScrollTop && currentScrollTop > 20) {
          toTopBtn.dataset.show = 'true';
        } else if (currentScrollTop < 20) {
          toTopBtn.dataset.show = 'false';
        } else {
          toTopBtn.dataset.show = 'false';
        }

        lastScrollTop = currentScrollTop;
      }
    }

    document.addEventListener('scroll', showBackToTop);
  })();
</script>
