---
const { post } = Astro.props;
---

<div
  class="flex flex-col bg-white border shadow-sm rounded-xl dark:bg-neutral-900 dark:border-neutral-700 dark:shadow-neutral-700/70 overflow-hidden"
>
  <a href={`/posts/${post.slug}/`}>
    <img
      class="w-full h-auto min-h-32 rounded-t-xl max-h-44 object-cover transition duration-300 ease-in-out scale-105 hover:scale-100 opacity:100 hover:opacity-80"
      src={post.data.image.url}
      alt={post.data.image.alt}
    />
  </a>
  <div class="p-4 md:p-5">
    <h3
      class="dark:text-slate-200 text-xl font-bold tracking-tight transition duration-75 hover:text-blue-700 dark:hover:text-white"
    >
      <a
        href={`/posts/${post.slug}/`}
        class="group-a inline-flex items-center max-w-fit justify-start transition ease-in-out hover:scale-105 underline decoration-dotted opacity-80 hover:opacity-100"
      >
        {post.data.title}
        <svg
          class="w-3 h-3 ms-2 mb-2 transition ease-in-out -rotate-45 group-a-hover:scale-x-110"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-line-cap="round"
            stroke-line-join="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </a>
    </h3>
    <p class="mt-1 text-gray-800 dark:text-slate-200 text-md">
      {post.data.description}
    </p>
  </div>
</div>
