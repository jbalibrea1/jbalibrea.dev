---
import Datetime from './DateTime';
import Tag from './Tag.astro';
import unifiedText from '@utils/unifiedText';
const { post, href } = Astro.props;
const { title, pubDateTime, modDateTime, description, tags } = post;
const titleSlug = unifiedText(title);
---

<div
  class="grid grid-cols-[1fr] md:grid-cols-[1fr_auto] md:gap-x-8 gap-y-2 items-start group transition duration-300 ease-in-out"
>
  <a
    href={href}
    class="decoration-dashed underline-offset-2 focus-visible:no-underline focus-visible:underline-offset-0 text-accent opacity-80 text-3xl md:text-4xl font-extrabold tracking-tighter box-decoration-slice group-hover:underline group-hover:opacity-100 group-hover:decoration-2 group-hover:decoration-accent-2 group-hover:scale-[1.005] transition duration-300 ease-in-out"
  >
    <h2 transition:name={titleSlug}>
      {title}
    </h2>
  </a>
  <div class="flex flex-wrap gap-2 md:max-w-40">
    {tags.map((tag: String) => <Tag tag={tag} />)}
  </div>
  <a
    href={href}
    class="group-hover:scale-[1.005] transition duration-300 ease-in-out"
    transition:name={`desc-${description}`}
  >
    {description}
  </a>
  <Datetime pubDateTime={pubDateTime} modDateTime={modDateTime} />
</div>
