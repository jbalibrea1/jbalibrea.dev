---
import { cn } from '@/lib/utils.ts';
import { type TocItem } from './toc';

interface Props {
  heading: TocItem;
}

const {
  heading: { depth, slug, subheadings, text: rawText },
} = Astro.props;
// TODO: Temporary fix for the issue with the headings that end with link reference text
const text = rawText.endsWith('#') ? rawText.slice(0, -1) : rawText;
---

<li>
  <div class="relative">
    <span
      class="absolute top-[5%] w-[2px] rounded transition-colors duration-300 highlight-bg:bg-accent readed:bg-accent/60"
    ></span>
    <a
      aria-label={`Scroll to section: ${text}`}
      class={cn(
        'line-clamp-2 px-3 py-1 ms-2 flex-1 font-light text-text-color/70 transition-all hover:text-text-color highlight:font-medium highlight:text-accent highlight-bg-translucent:bg-bg-color-2',
        depth > 2 && 'ps-7',
      )}
      href={`#${slug}`}>{text}</a
    >
  </div>
  {
    !!subheadings.length && (
      <ul>
        {subheadings.map((subheading) => (
          <Astro.self heading={subheading} />
        ))}
      </ul>
    )
  }
</li>
