---
import Button from "./Button.astro";
import { GitCard } from "./GitCard";
import LastProject from "./LastProject.astro";
---

<article>
  <div
    class="mb-4 flex flex-col sm:flex-row flex-wrap justify-between md:items-end gap-4"
  >
    <div>
      <h3 class="font-light text-4xl">Proyectos</h3>
    </div>
    <div class="flex justify-end items-center">
      <Button href="/repositories" text="Repositorios">
        <svg
          class="w-3 h-3 ms-2 group-hover:scale-x-125"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </Button>
    </div>
  </div>
  <div class="flex flex-col gap-2">
    <GitCard client:load latest={true} />
  </div>
</article>

<LastProject />
